@model TravelDataAccess.Models.Customer

@{
    ViewData["Title"] = "Register";
}

<div class="auth-wrapper">
    <div class="auth-card" style="max-width: 500px;">
        <div class="auth-header">
            <h1>✈️ Create Account</h1>
            <p>Join us and start your travel journey</p>
        </div>
        <div class="auth-body">
            @if (ViewBag.ErrorMessage != null)
            {
                <div class="alert alert-danger">
                    @ViewBag.ErrorMessage
                </div>
            }

            <form method="post" asp-action="Index">
                @Html.AntiForgeryToken()
                
                <div class="form-group">
                    <label class="form-label" asp-for="Code">Username <span style="color:var(--accent)">*</span></label>
                    <input class="form-control" asp-for="Code" placeholder="hieunm" required />
                    <span asp-validation-for="Code" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label class="form-label" asp-for="FullName">Full Name <span style="color:var(--accent)">*</span></label>
                    <input class="form-control" asp-for="FullName" placeholder="Enter your full name" required />
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label class="form-label" asp-for="Email">Email</label>
                    <input class="form-control" asp-for="Email" type="email" placeholder="your.email@example.com" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label class="form-label" asp-for="Age">Age</label>
                    <input class="form-control" asp-for="Age" type="number" min="0" placeholder="Enter your age" />
                    <span asp-validation-for="Age" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label class="form-label" asp-for="Password">Password <span style="color:var(--accent)">*</span></label>
                    <input class="form-control" asp-for="Password" type="password" placeholder="Create a password" required />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary" style="width: 100%; margin-top: 1rem;">Register</button>
            </form>

            <div style="margin-top: 1.5rem; text-align: center; font-size: 0.9rem;">
                Already have an account? <a href="@Url.Action("Index", "Login")" style="color: var(--primary); font-weight: 600;">Login here</a>
            </div>

            <div style="margin-top: 1rem; text-align: center;">
                 <a href="@Url.Action("Index", "Home")" style="color: #666; font-size: 0.9rem;">← Back to Home</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
