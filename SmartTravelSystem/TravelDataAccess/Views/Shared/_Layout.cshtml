<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Travel Management</title>
    
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet">
    
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        body { font-family: 'Poppins', sans-serif; } /* Ensure font is applied */
    </style>
</head>
<body>
    <header>
        <nav class="main-navbar">
            <div class="main-navbar-container">
                <a class="main-navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    ✈️ Travel Management
                </a>
                
                <ul class="main-nav-menu">
                    <li><a class="main-nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
                    
                    @if (Context.Session.GetString("UserCode") != null)
                    {
                        @if (Context.Session.GetString("UserRole") == "Admin") 
                        {
                            <!-- Admin specific links if needed -->
                        }
                        <li><a class="main-nav-link" asp-controller="Trip" asp-action="Index">Trips</a></li>
                        <li><a class="main-nav-link" asp-controller="Booking" asp-action="Index">My Bookings</a></li>
                        <li>
                            <span class="nav-user-badge">
                                Hi, @Context.Session.GetString("FullName")
                            </span>
                        </li>
                        <li>
                            <a class="btn btn-outline nav-btn" asp-controller="Login" asp-action="Logout">Logout</a>
                        </li>
                    }
                    else
                    {
                        <li><a class="btn btn-outline nav-btn" asp-controller="Login" asp-action="Index">Login</a></li>
                        <li><a class="btn btn-primary nav-btn" asp-controller="Register" asp-action="Index">Register</a></li>
                    }
                </ul>
            </div>
        </nav>
    </header>

    <div class="main-container">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer class="footer">
        <div class="container">
            &copy; 2026 - Travel Management System - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
