@model TravelManagementApp.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Smart Travel System</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600;700&display=swap">
    <style>
        :root {
            --primary-gradient: linear-gradient(135deg, #0061ff 0%, #60efff 100%);
            --glass-bg: rgba(255, 255, 255, 0.9);
        }
        
        body {
            background: var(--primary-gradient);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            font-family: 'Poppins', sans-serif;
            margin: 0;
        }

        .login-card {
            background: var(--glass-bg);
            backdrop-filter: blur(20px);
            border-radius: 24px;
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.15);
            padding: 3rem;
            width: 100%;
            max-width: 420px;
            transform: translateY(0);
            transition: transform 0.3s ease;
        }

        .login-card:hover {
            transform: translateY(-5px);
        }

        .brand-icon {
            font-size: 3.5rem;
            background: var(--primary-gradient);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            margin-bottom: 1rem;
            display: inline-block;
        }

        .form-control {
            border-radius: 12px;
            padding: 12px 16px;
            border: 2px solid #eef2f6;
            background: #f8fafc;
            font-weight: 500;
            transition: all 0.3s ease;
        }

        .form-control:focus {
            background: white;
            border-color: #0061ff;
            box-shadow: 0 0 0 4px rgba(0, 97, 255, 0.1);
        }

        .btn-login {
            background: var(--primary-gradient);
            border: none;
            border-radius: 12px;
            padding: 14px;
            font-weight: 600;
            letter-spacing: 0.5px;
            box-shadow: 0 10px 20px rgba(0, 97, 255, 0.2);
            transition: all 0.3s ease;
            width: 100%;
            color: white;
            margin-top: 1rem;
        }

        .btn-login:hover {
            transform: translateY(-2px);
            box-shadow: 0 15px 30px rgba(0, 97, 255, 0.3);
            color: white;
        }

        .demo-credentials {
            background: rgba(0, 97, 255, 0.05);
            border-radius: 12px;
            padding: 1rem;
            margin-top: 2rem;
            font-size: 0.85rem;
            color: #4a5568;
            border: 1px dashed rgba(0, 97, 255, 0.2);
        }
    </style>
</head>
<body>
    <div class="login-card text-center">
        <div class="brand-icon">✈️</div>
        <h2 class="fw-bold mb-1" style="color: #1e293b;">Welcome Back</h2>
        <p class="text-muted mb-4">Sign in to continue your journey</p>

        <form asp-action="Login" method="post" class="text-start">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger border-0 bg-danger bg-opacity-10 text-danger rounded-3 p-3 mb-3"></div>
            
            <div class="mb-3">
                <label asp-for="Code" class="form-label fw-bold small text-uppercase text-muted" style="letter-spacing: 0.5px;">Customer Code</label>
                <input asp-for="Code" class="form-control" placeholder="e.g. CUS-001" />
                <span asp-validation-for="Code" class="text-danger small mt-1 d-block"></span>
            </div>

            <div class="mb-4">
                <label asp-for="Password" class="form-label fw-bold small text-uppercase text-muted" style="letter-spacing: 0.5px;">Password</label>
                <input asp-for="Password" class="form-control" placeholder="••••••••" />
                <span asp-validation-for="Password" class="text-danger small mt-1 d-block"></span>
            </div>

            <button type="submit" class="btn btn-login mb-4">
                Sign In
            </button>

            <div class="text-center">
                <span class="text-muted">Don't have an account?</span>
                <a asp-action="Register" style="color: #0061ff; text-decoration: none; font-weight: 600;" class="ms-1">Register Here</a>
            </div>
        </form>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>
